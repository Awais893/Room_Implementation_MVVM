<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="id"
            type="String" />
        <variable
            name="title"
            type="String" />
        <variable
            name="Price"
            type="String" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Database_handler"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/topAppBar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:title="To Do List"
                app:menu="@menu/bottomnav"
                app:navigationIcon="@drawable/naviagte_tool_icon"
                style="@style/Widget.MaterialComponents.Toolbar.Primary"
                />

        </com.google.android.material.appbar.AppBarLayout>

        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:layout_marginTop="10dp" />
<com.google.android.material.bottomnavigation.BottomNavigationView
    android:layout_width="match_parent"
    android:layout_height="70dp"
    app:menu="@menu/bottomnav"
    android:id="@+id/bottomnav"
    android:padding="4dp"
    android:background="@drawable/bnbaack"
    app:itemIconSize="30dp"
    app:itemActiveIndicatorStyle="@color/color_state"
    app:itemPaddingBottom="10dp"
    android:layout_gravity="bottom"
    android:elevation="12dp"
    app:itemIconTint="@color/color_state"
    android:layout_marginHorizontal="10dp"
    app:itemTextColor="@color/color_state"
    tools:targetApi="lollipop" />
    </LinearLayout>

</layout>